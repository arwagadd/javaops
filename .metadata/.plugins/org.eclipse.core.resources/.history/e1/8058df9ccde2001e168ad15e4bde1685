package javaoperations;
import java.util.Scanner;

public class Sample {
	static int i = 0;
	static int result = 1;
	
	
	public static int factorial(int n) {
		for(i=n;i<=n;i--){
			result *= i;
		}
		return result;
	}
	
	public static void main(String args[]) {
		
		// Factorial
				factorial(3);
		
